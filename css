}

.deck__item {
  width: 100%;
  height: 100%;
  position: absolute;
  
  border-radius: .3em; 
  border: .1em solid rgba(black, .15);
  
  box-shadow: 
    0 0 .3em rgba(black, .3), 
    inset 0 6em 6em rgba(white, .1);
  
  transform-origin: 90% 92%;
  transition: .3s;
  
